		.detalles
			height  128px
			margin-left  6.25em
			.autor
				margin 0 
				a
					color naranjita
			.fecha
				float  right
				margin-right  1em
			.tags
				background	azulito
				border-radius  0.5em
				color blanco
				display  inline-block
				margin-top  1em /*1 em = 12 pts o 1em = 16px.*/
				padding  0.2em 0.5em
			.titulo
				font-size  .9em
				font-style  italic
				margin-bottom  0.5em
